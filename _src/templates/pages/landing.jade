.bg
.chapter-title
  .chapter-gradient.light
  header.bottom.intro
    h1
      span.glyphicon.title-intro-icon
    .intro-buttons
      .intro-play-buttons
        a.btn.resume-documentary-btn=locals.data.resumeButtonLabel
        a.btn.play-documentary-btn=locals.data.playButtonLabel
      .intro-media-buttons
        a.btn.chapters-btn=locals.data.chaptersButtonLabel
        a.btn.archive-btn=locals.data.archiveButtonLabel
.chapters.intro
  .top-button
    a.back=locals.data.backButtonLabel
  .chapters-container
    h1=locals.data.chaptersTitle
    ul
      each item in [1,2,3,4,5,6,7]
        li
          a #{item} - CHAPTER TITLE
