doctype html
html(lang="en")
  head
    include partials/header
  body(style="background-image: url('assets/images/hades.jpg')")
    .player-footer-container
      .video-player-controls
        .duration-info 07:06 | 32:46

        a.btn.chapters-btn(href="#")
          .dots
            span.glyphicon.dot
            span.glyphicon.dot
            span.glyphicon.dot
            span.glyphicon.dot
            span.glyphicon.dot
          span CHAPTERS
        .progress-bar
          .container.related-container
            .related-items
              .related-item(style="left:10%;")
              .related-item(style="left:17%;")
              .related-item(style="left:20%;")
              .related-item(style="left:50%;")
                .related-item-popup
                  .img
                    img(src="assets/images/thumbnail.jpg")
                  .info RELATED VIDEO TITLE
          .container.bar-container
            .bar-bg
            .bar-progress
              .bar-progress-control
          .container.info-container
            .chapter-info 1 - CHAPTER TITLE
            .duration-info 07:06 | 32:46
          .chapters
            .chapters-intro-container
              ul
                each item in [1,2,3,4,5,6,7]
                  li
                    a(href="#") #{item} - CHAPTER TITLE
        .player-buttons
          a.mute-btn(href="#")
            span.glyphicon.speaker-icon
          hr
          a.subs-btn(href="#") CC
      a.btn.related-items-btn(href="#") RELATED VIDEOS (NUMBER)
      include partials/footer
